{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "es2016", "es2017", "es2018"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveConstEnums": true,
    "rootDir": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@declareTypes/*": ["src/declareTypes/*"],
      "@typeConfig/*": ["./src/configs/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@auth/*": ["./src/auth/*"],
      "@services/*": ["./src/services/*"],
      "@core/*": ["./src/core/*"]
    }
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "**/*.spec.t", "dist", "build"]
}
