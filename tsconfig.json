{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveConstEnums": true,
    "rootDir": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@declareTypes/*": ["src/declareTypes/*"],
      "@typeConfig/*": ["./src/configs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.t", "dist", "build"]
}
